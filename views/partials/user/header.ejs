<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Authentication</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        /* Navigation Bar */
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            background: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            width: 100%;
            position: relative;
        }

        /* Logo */
        .logo {
            font-size: 1.5rem;
            font-weight: bold;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        
        .logo-class {
            height: 50px;
            width: 40px;
        }

        /* Navigation Links - Desktop */
        .nav-links {
            display: flex;
            gap: 1.5rem;
            align-items: center;
        }

        .nav-links a {
            text-decoration: none;
            color: #333;
            transition: color 0.3s ease-in-out;
            padding: 0.5rem 0;
        }

        .nav-links a:hover {
            color: #f39c12;
            text-decoration: underline;
        }

        /* Dropdown Menu */
        .dropdown {
            position: relative;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 160px;
            box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
            z-index: 100;
            border-radius: 5px;
            top: 100%;
            left: 0;
        }

        .dropdown-content a {
            color: #333;
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            transition: background 0.3s ease-in-out;
        }

        .dropdown-content a:hover {
            background-color: #f8f9fa;
            color: #f39c12;
        }

        /* Show dropdown when hovering */
        .dropdown:hover .dropdown-content {
            display: block;
        }

        /* Navbar Icons */
        .nav-icons {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .nav-icons span,
        .nav-icons a {
            font-size: 20px;
            cursor: pointer;
            transition: transform 0.3s ease-in-out;
        }

        /* Hover Effect */
        .nav-icons span:hover,
        .nav-icons a:hover {
            transform: scale(1.1);
            color: #f39c12;
        }

        .profile-image {
            height: 40px;
            width: 40px;
            border-radius: 50%;
            object-fit: cover;
        }

        .sign-in-link {
            text-decoration: none;
            color: black;
            font-size: 1rem;
        }

        /* Mobile Menu Toggle */
        .menu-toggle {
            display: none;
            cursor: pointer;
            font-size: 1.5rem;
        }

        /* Mobile Menu Styles */
        .mobile-menu {
            display: none;
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            z-index: 99;
            padding: 1rem;
            flex-direction: column;
            gap: 1rem;
        }

        .mobile-menu.active {
            display: flex;
        }

        .mobile-menu a {
            text-decoration: none;
            color: #333;
            padding: 0.5rem 0;
            border-bottom: 1px solid #eee;
        }

        .mobile-menu a:hover {
            color: #f39c12;
        }

        .mobile-dropdown-content {
            display: none;
            padding-left: 1rem;
            flex-direction: column;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .mobile-dropdown-content.active {
            display: flex;
        }

        /* Responsive Navbar */
        @media (max-width: 992px) {
            .nav-links {
                display: none;
            }
            
            .menu-toggle {
                display: block;
            }
            
            .nav-icons {
                gap: 0.5rem;
            }
            
            .profile-image {
                height: 35px;
                width: 35px;
            }
        }

        @media (max-width: 576px) {
            nav {
                padding: 1rem;
            }
            
            .logo {
                font-size: 1.2rem;
            }
            
            .logo-class {
                height: 40px;
                width: 32px;
            }
        }
    </style>
</head>
<body>
    <nav>
        <div class="logo">
            <img src="/images/logo.png" class="logo-class">
            <span>STYLE TRIBE</span>
        </div> 
        
        <!-- Desktop Navigation -->
        <div class="nav-links">
            <a href="/home">Home</a>
            <a href="/about">About</a>
            <a href="/contact">Contact</a>
            <a href="/shop">Shop</a>
            <a href="/cart">Cart</a>
            
            <% if (user) { %>
                <div class="dropdown">
                    <a href="/profile" class="dropbtn">Account</a>
                    <div class="dropdown-content">
                        <a href="/address">Address</a>
                        <a href="/profile">Profile</a>
                        <a href="#" onclick="confirmLogout(event)">Logout</a>
                    </div>
                </div>
            <% } else { %>
                <a href="/signin">Login</a>
            <% } %>
        </div>
        
        <!-- Mobile Menu Toggle -->
        <div class="menu-toggle" id="menuToggle">
            <i class="fas fa-bars"></i>
        </div>
        
        <!-- User Icons (Visible on all screens) -->
        <div class="nav-icons">
            <% if (user) { %>
                <span>
                    <img src="<%= user.image ? user.image : '/uploads/defaultProfileImage.jpg' %>" 
                         alt="User Profile" 
                         class="profile-image">
                </span>
            <% } %>
            <% if (locals.user) { %>
                <a href="/profile" class="sign-in-link">
                    <%= locals.user.fullname.charAt(0).toUpperCase() + locals.user.fullname.slice(1) %>
                </a>
            <% } %> 
        </div>
        
        <!-- Mobile Menu (Hidden by default) -->
        <div class="mobile-menu" id="mobileMenu">
            <a href="/home">Home</a>
            <a href="/about">About</a>
            <a href="/contact">Contact</a>
            <a href="/shop">Shop</a>
            
            <% if (user) { %>
                <a href="#" class="mobile-dropdown-toggle" onclick="toggleMobileDropdown(event)">
                    Account <i class="fas fa-chevron-down"></i>
                </a>
                <div class="mobile-dropdown-content">
                    <a href="/profile">Profile</a>
                    <a href="/address">Address</a>
                    <a href="#" onclick="confirmLogout(event)">Logout</a>
                </div>
            <% } else { %>
                <a href="/signin">Login</a>
            <% } %>
        </div>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        // Toggle mobile menu
        document.getElementById('menuToggle').addEventListener('click', function() {
            document.getElementById('mobileMenu').classList.toggle('active');
        });
        
        // Toggle mobile dropdown
        function toggleMobileDropdown(event) {
            event.preventDefault();
            const dropdown = event.target.closest('a').nextElementSibling;
            dropdown.classList.toggle('active');
            
            // Toggle chevron icon
            const icon = event.target.querySelector('i') || event.target.parentElement.querySelector('i');
            if (icon) {
                icon.classList.toggle('fa-chevron-down');
                icon.classList.toggle('fa-chevron-up');
            }
        }
        
        // Logout confirmation
        function confirmLogout(event) {
            event.preventDefault();
            Swal.fire({
                title: "Are you sure?",
                text: "You will be logged out!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, Logout"
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = "/logout";
                }
            });
        }
    </script>
</body>
</html>