<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
<style>
  /* Reusable Variables */
  :root {
    --sidebar-width: 17vw;
    --sidebar-bg: #212529;
    --sidebar-text: #fff;
    --sidebar-hover: #343a40;
    --primary-bg: #f8f9fa;
    --primary-text: #343a40;
    --primary-accent: #007bff;
    --danger-color: #dc3545;
    --success-color: #28a745;
    --transition: all 0.3s ease;
    --radius: 0.5rem;
    --shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    --dropdown-bg: #f8f9fa;
    --dropdown-text: #343a40;
    --dropdown-hover: #e9ecef;
  }

  body {
    font-family: "Segoe UI", sans-serif;
    background: var(--primary-bg);
    color: var(--primary-text);
    margin: 0;
    padding: 0;
  }

  .admin-wrapper {
    display: flex;
    min-height: 100vh;
    
  }

  /* Desktop Sidebar */
  .sidebar-wrapper {
    width: var(--sidebar-width);
    background:#333;
    color: var(--sidebar-text);
    height: 100vh;
    position: fixed;
    top: 0;
    left: 0;
    transition: var(--transition);
    z-index: 1000;
    padding: 20px 0;width: 15vw;
  }

  .sidebar {
    width: 100%;
    background-color: #333;
    color: var(--sidebar-text);
    padding:0;
  }

  .sidebar-header {
    text-align: center;
    font-size: 1.6rem;
    font-weight: bold;
    margin-bottom: 2rem;
    padding: 0 20px;
  }

  .sidebar-header h3 {
    font-size: 1.5vw;
    margin: 0;
  }

  .sidebar-menu {
    list-style: none;
    padding: 0;
    margin-left: 1vw;
    background-color: #333;
  }

  .sidebar-menu li {
    margin: 1vh 0;
    margin-left: 1vh;
    
    background-color: #333;
  }

  .sidebar-menu li a {
    color: var(--sidebar-text);
    text-decoration: none;
    display: block;
    padding: 1vh;
    font-size: 2vh;
    transition: var(--transition);
    margin-top:16px;
  }

  .sidebar-menu li a:hover,
  .sidebar-menu li a.active {
    background-color:#333;
  }

  /* Main Content */
  .main-content {
    flex: 1;
    margin-left: var(--sidebar-width);
    padding: 2vw;
    transition: var(--transition);
  }

  /* Mobile Header */
  .mobile-header {
    display: none;
    background: var(--sidebar-bg);
    color: white;
    padding: 12px 20px;
    align-items: center;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    z-index: 999;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }

  .sidebar-toggle {
    background: none;
    border: none;
    color: white;
    font-size: 1.5rem;
    margin-right: 10px;
    cursor: pointer;
  }

  /* Cards */
  .card {
    background: white;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
    margin-bottom: 20px;
  }

  .card-header, .card-body {
    padding: 1rem 1.25rem;
  }

  /* Tables */
  table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 2rem;
    border-radius: 8px;
    overflow: hidden;
    background: #fff;
  }

  .table th {
    background: var(--sidebar-bg);
    color: white;
    padding: 1rem;
    text-align: left;
  }

  .table td {
    padding: 1rem;
    border-bottom: 1px solid #eee;
  }

  tr:hover {
    background-color: #f5f7ff;
  }

  /* Buttons */
  .btn {
    border: none;
    padding: 6px 12px;
    font-size: 14px;
    border-radius: var(--radius);
    cursor: pointer;
    transition: var(--transition);
  }

  .btn-primary { 
    background: var(--primary-accent); 
    color: white; 
  }
  
  .btn-danger { 
    background: var(--danger-color); 
    color: white; 
  }
  
  .btn-success { 
    background: var(--success-color); 
    color: white; 
  }
  
  .btn-sm { 
    padding: 4px 10px; 
    font-size: 13px; 
  }

  /* Pagination */
  .pagination {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
    gap: 1rem;
  }

  .pagination .page-link {
    padding: 8px 12px;
    color: var(--primary-accent);
    border: 1px solid #dee2e6;
    border-radius: var(--radius);
    text-decoration: none;
    transition: var(--transition);
  }

  .pagination .active .page-link {
    background-color: var(--primary-accent);
    color: white;
    border-color: var(--primary-accent);
  }

  /* Utility Classes */
  .email-link {
    color: var(--primary-accent);
    text-decoration: none;
  }

  .email-link:hover {
    text-decoration: underline;
  }

  .empty-state {
    text-align: center;
    padding: 3rem;
  }

  /* Responsive Styles - Modified Dropdown */
  @media (max-width: 1200px) {
    .admin-wrapper {
      flex-direction: column;
    }

    .sidebar-wrapper {
      width: 100%;
      height: auto;
      position: fixed;
      top: 0;
      left: 0;
      transform: translateY(-100%);
      padding: 0;
      z-index: 1000;
    }

    .sidebar-wrapper.active {
      transform: translateY(0);
      box-shadow: 0 4px 10px rgba(0,0,0,0.2);
    }

    .sidebar {
      width: 100%;
      padding: 0;
    }

    .sidebar-menu {
      display: none;
      width: 320px;
      background: var(--dropdown-bg) !important;
      position: absolute;
      top: 100%;
      left: 0;
      margin: 0;
      padding: 10px 0;
      box-shadow: 0 5px 15px rgba(0,0,0,0.1);
      border-radius: 0 0 8px 8px;
      z-index: 1001;
    }

    .sidebar-menu.show {
      display: flex;
      flex-direction: column;
    }

    .sidebar-menu li {
      margin: 0;
      background: transparent !important;
    }

    .sidebar-menu li a {
      color: var(--dropdown-text) !important;
      padding: 14px 30px !important;
    }

    .sidebar-menu li a:hover,
    .sidebar-menu li a.active {
      background: var(--dropdown-hover) !important;
      color: var(--primary-accent) !important;
    }

    .mobile-header {
      display: flex;
    }

    .main-content {
      margin-left: 0;
      padding-top: 60px;
    }
  }

  /* Full width dropdown on mobile */
  @media (max-width: 576px) {
    .sidebar-menu {
      width: 100% !important;
      border-radius: 0;
    }
  }

  /* Admin Info Box */
  .admin-info-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: #fff;
    padding: 2vh;
    margin-bottom: 2vh;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
  }

  .logout-btn {
    background-color: var(--danger-color);
    color: white;
    border: none;
    padding: 1vh 2vw;
    cursor: pointer;
    border-radius: var(--radius);
    transition: var(--transition);
  }

  .logout-btn:hover {
    background-color: #c82333;
  }

  .container {
    background: #fff;
    padding: 2rem;
    border-radius: var(--radius);
    box-shadow: var(--shadow);
  }

  h1, h2, h3, h4 {
    color: var(--primary-text);
  }
</style>
