<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Email</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .email-container {
            max-width: 500px;
            margin: 50px auto;
            padding: 30px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }
        .email-header {
            text-align: center;
            margin-bottom: 30px;
        }
        .form-label {
            font-weight: 500;
        }
        .btn-change {
            width: 100%;
            padding: 10px;
            font-weight: 600;
        }
        .email-preview {
            background-color: #f1f1f1;
            padding: 10px;
            border-radius: 5px;
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="email-container">
            <div class="email-header">
                <h2>Change Email Address</h2>
                <p class="text-muted">Please enter your new email address</p>
            </div>
            
            <form id="changeEmailForm">
                <!-- Add the Current Email and Password Fields -->
                <div class="mb-3">
                    <label for="currentEmail" class="form-label">Current Email Address</label>
                    <input type="email" class="form-control" id="currentEmail" required>
                </div>

                <div class="mb-3">
                    <label for="currentPassword" class="form-label">Current Password</label>
                    <input type="password" class="form-control" id="currentPassword" required>
                </div>

                <div class="mb-3">
                    <label for="newEmail" class="form-label">New Email Address</label>
                    <input type="email" class="form-control" id="newEmail" required
                           pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
                           title="Please enter a valid email address">
                    <small class="form-text text-muted">We'll send a verification link to this address</small>
                </div>
                
                <div class="mb-4">
                    <label for="confirmEmail" class="form-label">Confirm New Email</label>
                    <input type="email" class="form-control" id="confirmEmail" required>
                    <div class="invalid-feedback" id="emailMatchError">Email addresses don't match</div>
                </div>
                
                <button type="submit" class="btn btn-primary btn-change">
                    <i class="fas fa-envelope me-2"></i>Change Email
                </button>
            </form>
        </div>
    </div>

    <!-- Font Awesome for icons -->
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('changeEmailForm').addEventListener('submit', function(e) {
            e.preventDefault();
    
            const currentEmail = document.getElementById('currentEmail').value;
            const newEmail = document.getElementById('newEmail').value;
            const confirmEmail = document.getElementById('confirmEmail').value;
            const currentPassword = document.getElementById('currentPassword').value;
    
            // Check if emails match
            if (newEmail !== confirmEmail) {
                document.getElementById('confirmEmail').classList.add('is-invalid');
                return;
            } else {
                document.getElementById('confirmEmail').classList.remove('is-invalid');
            }
    
            // Send data via AJAX
            fetch('/resetemail', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    currentEmail,
                    newEmail,
                    currentPassword
                })
            })
            .then(response => response.json())
            .then(data => {
                if (data.message) {
                    alert(data.message); // Display success message
                    if (data.message === 'Email updated successfully') {
                    // Redirect to the success page after a successful update
                  
                    window.location.href='/emailsuccess'
                }
                }
            })
            .catch(error => {
                alert('An error occurred: ' + error.message);
            });
        });
    </script>
    
</body>
</html>
