<%- include('../partials/user/header') %> 
    <meta charset="utf-8"/>
    <title>Shopping</title>
   
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/style/user/shop.css">
</head>
<body class="bg-gray-100">
   
    <!-- Breadcrumb Section -->
    <div class="breadcrumb">
        <a href="/" class="texts">Home</a> 
        <a href="/shop" class="texts"> /Shop</a>
    </div>
    
    <!-- Banner Section -->
    <div class="relative w-full h-[40vh] flex items-center bg-gray-200 banner" style="background-image: url('/images/shop/bbb.jpeg');" >
    </div>

    <!-- Main Shop Layout -->
    <div class="shop-container">
        
        <!-- Sidebar -->
        <div class="filter-container">
            <h2 class="text-xl font-semibold mb-4 ">CATEGORIES</h2>
            <ul class="mb-8" >
                <% for (let i = 0; i < category.length; i++) { %>
                    <li class="mb-2 cattext">
                        <a class="text-gray-700 " href="/filter?category=<%= category[i]._id %>" style="color:black">
                            <%= category[i].name %>
                        </a>
                    </li>
                <% } %>
            </ul>

            <br><div class="flex justify-end mb-4">
                <form action="/shop" method="GET" class="form-inline">
                    <!-- Price Range -->
                    <h2 class="text-xl font-semibold mb-4">PRICE RANGE</h2>
                    <div class="mb-4">
                        <label class="block text-gray-700">Price From:</label>
                        <input class="w-full p-2 border rounded" id="price-from" type="number" name="price-from" value="<%= priceFrom || 1 %>"/>
                    </div>
                    <div class="mb-4">
                        <label class="block text-gray-700">Price To:</label>
                        <input class="w-full p-2 border rounded" id="price-to" type="number" name="price-to" value="<%= priceTo || 2000 %>"/>
                    </div>
                    
                    <!-- Product Search -->
                    <div class="form-group mr-2">
                        <input type="text" id="advanced-search-glow" name="search" class="form-control" placeholder="Search products..." value="<%= search || '' %>">
                    </div>

                    <!-- Category Filter -->
                    <div class="form-group mr-2">
                        <label class="block text-gray-700" for="category">Category</label>
                        <select name="category" class="form-control" id="category">
                            <option value="">Select Category</option>
                            <% for (let i = 0; i < category.length; i++) { %>
                                <option value="<%= category[i]._id %>" <%= category[i]._id == req.query.category ? 'selected' : '' %>><%= category[i].name %></option>
                            <% } %>
                        </select>
                    </div>
                    <!-- Sort Options -->
                    <div class="form-group mr-2">
                        <label for="sortBy"> Sort By</label>
                        <select name="sort" class="form-control">
                            <option value="">Sort by...</option>
                            <option value="popularity" <%= sort === 'popularity' ? 'selected' : '' %>>Popularity</option>
                            <option value="price_asc" <%= sort === 'price_asc' ? 'selected' : '' %>>Price: Low to High</option>
                            <option value="price_desc" <%= sort === 'price_desc' ? 'selected' : '' %>>Price: High to Low</option>
                            <option value="rating" <%= sort === 'rating' ? 'selected' : '' %>>Average Ratings</option>
                            <option value="featured" <%= sort === 'featured' ? 'selected' : '' %>>Featured</option>
                            <option value="new" <%= sort === 'new' ? 'selected' : '' %>>New Arrivals</option>
                            <option value="name_asc" <%= sort === 'name_asc' ? 'selected' : '' %>>Name: A to Z</option>
                            <option value="name_desc" <%= sort === 'name_desc' ? 'selected' : '' %>>Name: Z to A</option>
                        </select>
                    </div>
                    <br>

                    <button type="submit" class="btn btn-primary applybtn">Apply</button>
                    <a href="/shop"><button type="button" class="btn btn-danger">Clear All</button></a>
                </form>
            </div>
        </div>

        <!-- Product Listing -->
        <div class="product-section">
            <div class="product-grid">
                <% for (let i = 0; i < products.length; i++) { %>
                    <div class="product">
                        <a href="/productDetails?id=<%= products[i]._id %>">
                            <div class="image-container">
                                <img alt="<%= products[i].productName %>" src="<%= products[i].productImage[0] %>"/>
                            </div>
                            <h3 class="text-lg font-semibold mb-2" style="font-size: 90%; text-decoration: none;">
                                <%= products[i].productName %>
                            </h3>
                            
                        </a>
                    
                        Offer: <%=Math.max(products[i].categoryOffer,products[i].productOffer) %>% <span style="color:red">off</span>
                       
                       
                        <% if (products[i].categoryOffer|| productOffer ) { %>
                            <% if ( products[i].quantity>0) {%>
                            <p class="text-gray-700 mb-2">Buy now<span style="font-weight: 900;">&nbsp ₹<%= Math.floor(products[i].salePrice ) %></span> </p>
                            <div class="flex justify-between items-center">
                                <a onclick="addToCart('<%= products[i]._id %>')" class="btn-primary">
                                    Add to Cart 
                                </a>
                                <button class="wishlist-button" onclick="addToWishlist('<%= products[i]._id %>', this)">
                                    <i class="fas fa-heart text-xl"></i>
                                </button>
                                <% }%>
                                </div>
                                <% } else { %> <p class="text-gray-700 mb-2">Buy now<span style="font-weight: 900;">&nbsp ₹<%= products[i].salePrice %></span></p>
                                <div class="flex justify-between items-center">
                                    <a onclick="addToCart('<%= products[i]._id %>')" class="btn-primary">
                                        Add to Cart
                                    </a>
                                    <button class="wishlist-button" onclick="addToWishlist('<%= products[i]._id %>', this)">
                                        <i class="fas fa-heart text-xl"></i>
                                    </button>
                                </div>
                                <% }  %>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <div class="pagination">
        <ul class="pagination">
            <% if (currentPage > 1) { %>
                <li class="page-item">
                    <a class="page-link" href="/shop?page=<%= currentPage - 1 %>&search=<%= search %>&sort=<%= sort %>&price-from=<%= priceFrom %>&price-to=<%= priceTo %>&category=<%= category %>">Previous</a>
                </li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                    <a class="page-link" href="/shop?page=<%= i %>&search=<%= search %>&sort=<%= sort %>&price-from=<%= priceFrom %>&price-to=<%= priceTo %>&category=<%= category %>"><%= i %></a>
                </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
                <li class="page-item">
                    <a class="page-link" href="/shop?page=<%= currentPage + 1 %>&search=<%= search %>&sort=<%= sort %>&price-from=<%= priceFrom %>&price-to=<%= priceTo %>&category=<%= category %>">Next</a>
                </li>
            <% } %>
        </ul>
    </div>

    <%- include('../partials/user/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        function addToCart(productId) {
            fetch(`/addToCart?id=${productId}`)
                .then(response => response.json())
                .then(data => {
                    Swal.fire({
                        icon: 'success',
                        title: 'Added to Cart',
                        text: data.message,
                        timer: 2000,
                        showConfirmButton: false
                    });
                });
        }

        function addToWishlist(productId) {
            if (!productId) {
                console.error("Product ID is missing.");
                return;
            }

            fetch(`/addToWishlist?id=${productId}`)
                .then(response => response.json())
                .then(data => {
                    Swal.fire({
                        icon: data.success ? 'success' : 'error',
                        title: data.success ? 'Added to Wishlist' : 'Already in Wishlist',
                        text: data.message,
                        timer: 2000,
                        showConfirmButton: false
                    });
                })
                .catch(error => {
                    console.error("Error adding to wishlist:", error);
                    Swal.fire({
                        icon: 'error',
                        title: 'Error',
                        text: 'Failed to add item to wishlist. Please try again.',
                        timer: 2000,
                        showConfirmButton: false
                    });
                });
        }
    </script>
</body>
</html>
